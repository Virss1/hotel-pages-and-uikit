include /common/logo-mini/logo-mini

block variables

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
  body.ui-kit-page(
    class=isGrey ? `ui-kit-page_grey` : ''
  )
    header.ui-kit-header
      .ui-kit-header__logo
        +logo-mini
    if isWithContainer
      .container
        div(class=pageClass)
          block content
    else
      div(class=pageClass)
        block content
