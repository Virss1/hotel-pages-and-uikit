      name: "string",
      label: "string",
      isChecked: boolean
    }
mixin radio(options)
  -
    const randID = Math.floor(Math.random() * (1 - 1000) + 1000);
    const {
      name,
      label,
      isChecked,
    } = options;

  label.radio
    input.radio__switch(
      id=`r-${randID}`,
      type="radio",
      name=name,
      checked=isChecked
    )
    span.radio__label= label
