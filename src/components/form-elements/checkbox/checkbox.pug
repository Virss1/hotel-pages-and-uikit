mixin checkbox(options)
  -
    const randID = Math.floor(Math.random() * (1 - 1000) + 1000);
    const {
      label = '',
      isChecked = false,
    } = options;

  label.checkbox
    input.checkbox__switch(
      id=`cb-${randID}`
      type="checkbox"
      checked=isChecked
    )
    span.checkbox__label !{label}
