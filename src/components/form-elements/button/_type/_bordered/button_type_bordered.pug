      caption: "string",
      isSmall: boolean,
      isForceHover: boolean,
    }
mixin button_type_bordered(options)
  - const { isSmall, isForceHover, caption } = options;

  .button.button_type_bordered(
    class=isSmall ? "button_small" : ""
    class=isForceHover ? "button_force-hover" : ""
  )
    button.button.button_type_bordered__body(type="button")= caption
