//- options: {
      isClicked: boolean,
      likesCount: number
    }
mixin like-button(options = {})
  include /common/random-id-generator/random-id-generator
  -
    const {
      isClicked = false,
      likesCount = 0,
    } = options;

  .like-button.js-like-button(
    class=isClicked ? "like-button_clicked" : ""
    id=`like-${randID}`
    style=`--likes-count: ${likesCount}`
  )
    .like-button__content
