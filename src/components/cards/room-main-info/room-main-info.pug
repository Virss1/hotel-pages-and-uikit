mixin room-main-info(options)
  -
    const {
      number,
      isLux,
      price,
      isSmall,
    } = options;
    const thousands = Math.floor(price / 1000);
    const hundreds = price - (thousands * 1000);

  .room-main-info
    .room-main-info__room-info
      .room-main-info__room-number №&nbsp;
        b.room-main-info__number(
          class=isSmall ? "room-main-info__number_small" : ""
        )= number
      if isLux
        span.room-main-info__room-class люкс
    .room-main-info__room-price
      b.room-main-info__room-price-amount #{thousands}&nbsp;#{hundreds}₽
      |  в сутки
