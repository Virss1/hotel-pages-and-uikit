include /common/logo-full/logo-full
include /form-elements/text-field/text-field
include /headers-and-footers/social-icons/social-icons

mixin footer
  footer.footer
    .footer__container
      main.footer__main-content
        .footer__description
          .footer__logo
            a.footer__main-page-link(href="landing.html")
              +logo-full
          .footer__description-text
            | Бронирование номеров в лучшем
            | отеле 2019 года по версии
            | ассоциации «Отельные взгляды»
        -
          const menuLists = [
            {
              title: "Навигация",
              links: [
                { title: "О нас", href: "" },
                { title: "Новости", href: "" },
                { title: "Служба поддержки", href: "" },
                { title: "Услуги", href: "" },
              ],
            },
            {
              title: "О нас",
              links: [
                { title: "О сервисе", href: "" },
                { title: "Наша команда", href: "" },
                { title: "Вакансии", href: "" },
                { title: "Инвесторы", href: "" },
              ],
            },
            {
              title: "Служба поддержки",
              links: [
                { title: "Соглашения", href: "" },
                { title: "Сообщества", href: "" },
                { title: "Связь с нами", href: "" },
              ],
            },
          ];
        each list in menuLists
          .footer__menu
            +footer-menu(list.title, list.links)
        .footer__subscription
          h3.footer__subscription-row Подписка
          p.footer__subscription-row Получайте специальные предложения и новости сервиса
          .footer__subscription-row
            +text-field({ isSubscription: true })
    .footer__container.footer__container_bottom
      footer.footer__copyright-bar
        .footer__copyright Copyright © 2018 Toxin отель. Все права зачищены.
        .footer__social
          +social-icons

//- helper mixin, used only in this file
mixin footer-menu(title, items)
  .footer-menu
    h3.footer-menu__title= title
    ul.footer-menu__items-list
      each item in items
        li.footer-menu__item
          a.footer-menu__link(
            href=item.href || "/mock-address/change-me"
          )= item.title
